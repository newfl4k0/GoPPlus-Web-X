                            <div class="checkbox">
                                @Html.EditorFor(model => model.Habilitado, new { htmlAttributes = new { @disabled = "disabled" } })
                                @Html.ValidationMessageFor(model => model.Habilitado, "", new { @class = "text-danger" })
