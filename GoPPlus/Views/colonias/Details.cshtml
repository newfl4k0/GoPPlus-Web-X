@model GoPS.Models.Colonias
@using GoPS.Helpers;

@{
    ViewBag.Title = "Ver Detalles de Colonia";
}

@Html.Hidden("Permiso", "Mapas")
<div class="main">
    @{Html.RenderPartial("Breadcrumb", "Colonias > Detalles"); }
    <div class="row">
        <div class="col-lg-12">
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Latitud)
                    </dt>

                    <dd>
                        <label class="tdlabel">@Model.Latitud</label>
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Longitud)
                    </dt>

                    <dd>
                        <label class="tdlabel">@Model.Longitud</label>
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ID_Ciudad)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Ciudades.Poblacion)
                    </dd>

                </dl>
            </div>
            <p class="div_actions">
                @Html.EncodedActionLink("Editar", "Edit", "Colonias", new { id = Model.ID_Colonia }, new { @class = "_Edicion" })<span class="_Edicion pipe"> | </span>
                @Html.ActionLink("Regresar", "Index", null, new { @class = "_Visualizacion" })
            </p>
        </div>
    </div>
</div>