@model GoPS.Models.Marcas

@{
    ViewBag.Title = "Eliminar Marca";
}

@Html.Hidden("Permiso", "Vehiculos")
<div class="main">
    @{Html.RenderPartial("Breadcrumb", "Marcas > Eliminar"); }
    <div class="row">
        <div class="col-lg-12">
            <h3>
                ¿Estás seguro de eliminar este registro? Se eliminarán los registros de Modelos asociados a esta Marca.
            </h3>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color div_actions">
                        <input type="submit" value="Eliminar" class="btn btn-default" /> |
                        @Html.ActionLink("Regresar", "Index", null, new { @class = "_Visualizacion" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
