@model GoPS.ViewModels.VehiculosViewModel
@using GoPS.Helpers;
@{
    ViewBag.Title = "Selecciona Unidad";
    Layout= "~/Views/Shared/_Layout.cshtml";
}
@Html.Hidden("Permiso", "Monitoreo")
<div class="main">
    @{Html.RenderPartial("NavBar_CatOperaciones", "Seleccionar Unidades"); }
    <div class="row">
        <div class="col-lg-12">
            <br />
            <div class="panel panel-default">
                <div class="panel-body">
                    <table data-toggle="table" data-pagination="true" data-show-refresh="false" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-sort-name="Email" data-sort-order="asc">
                        <thead>
                            <tr>
                                <th data-field="Email" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Matrícula")
                                </th>
                                <th data-field="UserName" data-sortable="true" data-sorter="customSorter" >
                                    @Html.Label("No. Transporte Ejecutivo")
                                </th>                               
                                <th>Acciones</th>
                            </tr>
                        </thead>

                        @foreach (var item in Model.vehiculos)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Matricula)
                                </td>                               

                                <td>
                                    @Html.DisplayFor(modelItem => item.NoTransporte)
                                </td>                            
                                
                                <td>
                                    @Html.EncodedActionLink("Seleccionar", "SelectUnidad", "Home", new { id = item.ID_Vehiculo }, new { @class = "btn-success" })
                                </td>
                            </tr>
                         }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>