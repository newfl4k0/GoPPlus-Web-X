@model IEnumerable<GoPS.Models.Chat>

@{
    ViewBag.Title = "Ver Detalles de Chat";
}

@Html.Hidden("Permiso", "Monitoreo")
<div class="main">
    @{Html.RenderPartial("NavBar_CatChats", "Detalles"); }
    <div class="row">
        <div class="col-lg-12">            
                <hr />
                <div class="panel panel-default chat">
                    <div class="panel-heading">Chat
                        <ul class="pull-right panel-settings panel-button-tab-right">
                            <li class="dropdown">
                                <a class="pull-right dropdown-toggle" data-toggle="dropdown" href="#">
                                    <em class="fa fa-cogs"></em>
                                </a>                               
                            </li>
                        </ul>
                        <span class="pull-right clickable panel-toggle panel-button-tab-left"><em class="fa fa-toggle-up"></em></span>
                    </div>
                    <div class="panel-body">
                        <ul>
                            @foreach (var item in Model)
                            {
                                if (item.Es_Conductor == 1)
                                {
                                    <li class="left clearfix">
                                        <span class="chat-img pull-left">
                                            <img src="http://placehold.it/60/30a5ff/fff" alt="Símbolo de Usuario" class="img-circle" />
                                        </span>
                                        <div class="chat-body clearfix">
                                            <div class="header"><strong class="primary-font">@item.Conductores.NombreCompleto </strong> <small class="text-muted">@item.Fecha.ToString("dddd d MMMM, yyyy. HH:mm")</small></div>
                                            <p>@item.Mensaje</p>
                                        </div>
                                    </li>
                                }
                                else
                                {
                                    if (@item.ID_Despacho == null)
                                    {
                                        <li class="right clearfix">
                                            <span class="chat-img pull-right">
                                                <img src="http://placehold.it/60/dde0e6/5f6468" alt="Símbolo de Usuario" class="img-circle" />
                                            </span>
                                            <div class="chat-body clearfix">
                                                <div class="header"><strong class="pull-left primary-font">Central</strong> <small class="text-muted">@item.Fecha.ToString("dddd d MMMM, yyyy. HH:mm")</small></div>
                                                <p>@item.Mensaje</p>
                                            </div>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="right clearfix">
                                            <span class="chat-img pull-right">
                                                <img src="http://placehold.it/60/dde0e6/5f6468" alt="Símbolo de Usuario" class="img-circle" />
                                            </span>
                                            <div class="chat-body clearfix">
                                                <div class="header"><strong class="pull-left primary-font">@item.Despachos.Reservas.Clientes.Nombre</strong> <small class="text-muted">@item.Fecha.ToString("dddd d MMMM, yyyy. HH:mm")</small></div>
                                                <p>@item.Mensaje</p>
                                            </div>
                                        </li>
                                    }

                                }
                            }                          
                        </ul>
                    </div>
                    <div class="panel-footer">
                        <div class="input-group">
                            <input id="btn-input" type="text" class="form-control input-md" placeholder="Escibe tu mensaje..." /><span class="input-group-btn">
                                <button class="btn btn-primary btn-md" id="btn-chat">Enviar</button>
                            </span>
                        </div>
                    </div>
                
                </div><!--/.col-->
        </div>
            <p class="div_actions">                
                @Html.ActionLink("Regresar", "Index", null, new { @class = "_Visualizacion" })
            </p>
    </div>        
</div>