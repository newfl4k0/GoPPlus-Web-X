@model IEnumerable<GoPS.Models.Conductores>
@using GoPS.Helpers;
@{
    ViewBag.Title = "Conductores";
}
@Html.Hidden("Permiso", "Vehiculos")
<div class="main">
    @{Html.RenderPartial("NavBar_CatVehiculos", "Catálogo de Conductores"); }
    <div class="row">
        <div class="col-lg-12">
            <br />
            <p>
                @Html.ActionLink("Nuevo", "Create", null, htmlAttributes: new { @class = "btn btn-default _Edicion" })
            </p>
            @if (ViewBag.Delete != null)
            {
                <p class="text-success">Registro Eliminado Exitosamente</p>
            }
            <div class="panel panel-default">
                <div class="panel-body">
                    <table data-toggle="table" data-pagination="true" data-show-refresh="false" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-sort-name="Apellido" data-sort-order="asc">
                        <thead>
                            <tr>
                                <th data-field="Apellido" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Apellido")
                                </th>
                                <th data-field="Nombre" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Nombre")
                                </th>
                                <th data-field="Telefono" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Teléfono")
                                </th>
                                <th data-field="Habilitado" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Habilitado")
                                </th>
                                <th data-field="Flotas.Nombre" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Flota")
                                </th>
                                <th>@Html.Label("Acciones")</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Apellido)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefono)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Habilitado)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Flotas.Nombre)
                                </td>
                                <td class="div_actions">
                                    @Html.EncodedActionLink("Asignar Vehículo", "Assign", "Conductores", new { id = item.ID_Conductor }, new { @class = "_Edicion" })<span class="_Edicion pipe"> | </span>
                                    @Html.EncodedActionLink("Asignar Usuario", "AssignUser", "Conductores", new { id = item.ID_Conductor }, new { @class = "_Edicion" })<span class="_Edicion pipe"> | </span>
                                    @Html.EncodedActionLink("Editar", "Edit", "Conductores", new { id = item.ID_Conductor }, new { @class = "_Edicion" })<span class="_Edicion pipe"> | </span>
                                    @Html.EncodedActionLink("Detalles", "Details", "Conductores", new { id = item.ID_Conductor }, new { @class = "_Visualizacion" })<span class="_Visualizacion pipe"> | </span>
                                    @Html.EncodedActionLink("Eliminar", "Delete", "Conductores", new { id = item.ID_Conductor }, new { @class = "_Edicion" })<span class="_Visualizacion pipe"> | </span>
                                    @Html.EncodedActionLink("Enviar Mensaje", "SendMessage", "Chats", new { id = item.ID_Conductor }, new { @class = "_Edicion" })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
