@model GoPS.Models.Modelos
@using GoPS.Helpers;
@{
    ViewBag.Title = "Ver Detalles de Modelo";
}

@Html.Hidden("Permiso", "Vehiculos")
<div class="main">
    @{Html.RenderPartial("Breadcrumb", "Modelos > Detalles"); }
    <div class="row">
        <div class="col-lg-12">
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ID_Marca)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Marcas.Nombre)
                    </dd>

                </dl>
            </div>
            <p class="div_actions">
                @Html.EncodedActionLink("Editar", "Edit", "Modelos", new { id = Model.ID_Modelo }, new { @class = "_Edicion" })<span class="_Edicion pipe"> | </span>
                @Html.ActionLink("Regresar", "Index", null, new { @class = "_Visualizacion" })
            </p>
        </div>
    </div>
</div>