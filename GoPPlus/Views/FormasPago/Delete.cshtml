@model GoPS.Models.FormasPago

@{
    ViewBag.Title = "Eliminar Forma de Pago";
}

@Html.Hidden("Permiso", "Configuraciones")
<div class="main">
    @{Html.RenderPartial("NavBar_CatFormaPago", "Eliminar"); }
    <div class="row">
        <div class="col-lg-12">
@if (ViewBag.Eliminar)
            {
            <h3> @ViewBag.Mess </h3>
}
else
{
    <h3>
        Este registro no se puede eliminar ya que tiene Conductores asociados.
    </h3>
}
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                </dl>

                @if (ViewBag.Eliminar)
                {
                    using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-actions no-color div_actions">
                            <input type="submit" value="Eliminar" class="btn btn-default" /> |
                            @Html.ActionLink("Regresar", "Index", null, new { @class = "_Visualizacion" })
                        </div>
                    }
                }
                else
                {
                    @Html.ActionLink("Regresar", "Index", null, new { @class = "_Visualizacion" })
                }
            </div>
        </div>
    </div>
</div>
