@model GoPS.Models.AspNetRoles
@using GoPS.Helpers;
@{
    ViewBag.Title = "Ver Detalles de Perfil";
}

@Html.Hidden("Permiso", "General")
<div class="main">
    @{Html.RenderPartial("Breadcrumb", "Perfiles > Detalles"); }
    <div class="row">
        <div class="col-lg-12">
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Afiliado)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Afiliado)
                    </dd>
                </dl>
            </div>
            <p class="div_actions">
                @Html.EncodedActionLink("Editar", "Edit", "AspNetRoles", new { id = Model.Id }, new { @class = "_Edicion" })<span class="_Edicion pipe"> | </span>
