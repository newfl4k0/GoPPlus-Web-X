@using GoPS.Helpers;
@{
    ViewBag.Title = "Consultas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<GoPS.Models.ParticionesCalles>
@Html.Hidden("Permiso", "Mapas")
<div class="main">
    @{Html.RenderPartial("Breadcrumb", "Catálogo de Consultas"); }
    <div class="row">
        <div class="col-lg-12">
            <br />
            <div class="panel panel-default">
                <div class="panel-body">
                    <table data-toggle="table" data-pagination="true" data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-sort-name="Calles" data-sort-order="asc">
                        <thead>
                            <tr>
                                <th data-field="Calles" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Calles")
                                </th>
                                <th data-field="Colonias" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Colonias")
                                </th>
                                <th data-field="Localizaciones" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Localizaciones Ubicación")
                                </th>
                            </tr>
                        </thead>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Calles.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Calles.Colonias.Nombre)
                                </td>
                                <td>
                                    <label class="tdlabel">@item.Latitud</label> <br />
                                    <label class="tdlabel">@item.Longitud</label>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

