    @{Html.RenderPartial("Breadcrumb", "Turnos > Detalles"); }
    <div class="row">
        <div class="col-lg-12">
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.ID_Afiliado)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Afiliados.Nombre)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Habilitado)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Habilitado)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Hora_Inicio)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Hora_I_Format)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Hora_Fin)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Hora_F_Format)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Dias)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.diasList)
                    </dd>
                </dl>
            </div>
            <p class="div_actions">
                @Html.EncodedActionLink("Editar", "Edit", "Turnos", new { id = Model.ID_Turno }, new { @class = "_Edicion" })<span class="_Edicion pipe"> | </span>
