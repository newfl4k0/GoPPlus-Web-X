@model IEnumerable<GoPS.Models.vwClientes>
@using GoPS.Helpers;
@{
    ViewBag.Title = "Clientes";
}
@Html.Hidden("Permiso", "Clientes")
<div class="main">
    @{Html.RenderPartial("NavBar_CatClientes", "Catálogo de Clientes");}
    <div class="row">
        <div class="col-lg-12">
            <br />            
            @if (ViewBag.Delete != null)
            {
                <p class="text-success">Registro Eliminado Exitosamente</p>
            }
            <div class="panel panel-default">
                <div class="panel-body">
                    <table data-toggle="table" data-locale="es-MX" data-pagination="true" data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-sort-name="Nombre" data-sort-order="asc">
                        <thead>
                            <tr>
                                <th data-field="Nombre" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Cliente")
                                </th>
                                <th data-field="Correo" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Correo")
                                </th>
                                <th data-field="Telefono" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Teléfono")
                                </th>
                                <th data-field="Fecha_Creacion" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Fecha de Creación")
                                </th>
                                <th data-field="Fecha_Cumpleans" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Cumpleaños")
                                </th>
                                <th data-field="Activo" data-sortable="true" data-sorter="customSorter" style="text-align:center;">
                                    @Html.Label("Activo")
                                </th>
                                <th>@Html.Label("Acciones")</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Correo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefono)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha_Creacion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha_Cumpleans)
                                </td>
                                <td>
                                    @if (item.Activo == 1)
                                    { 
                                        @Html.CheckBox("Activo",true);
                                    }
                                    @if (item.Activo == 0)
                                    {
                                        @Html.CheckBox("Activo", false);}
                                </td>
                                <td class="div_actions">
                                    @Html.EncodedActionLink("Detalles", "Details", "Clientes", new { id = item.ID_Cliente }, new { @class = "_Visualizacion" })                                       
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

