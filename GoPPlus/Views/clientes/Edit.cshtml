                    @Html.HiddenFor(model => model.Fecha_Creacion)

                    @Html.HiddenFor(model => model.ID_Afiliado, htmlAttributes: new { @id = "hdnID_Afiliado" })
                    @Html.HiddenFor(model => model.Nombre, htmlAttributes: new { @id = "hdnNombre" })
                    @Html.HiddenFor(model => model.Calles.Colonias.Ciudades.ID_Estado, htmlAttributes: new { @id = "hdnID_Estado_Origen" })
                    @Html.HiddenFor(model => model.Calles.Colonias.ID_Ciudad, htmlAttributes: new { @id = "hdnID_Ciudad_Origen" })
