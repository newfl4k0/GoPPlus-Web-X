@model GoPS.Models.Despachos

@{
    ViewBag.Title = "Detalles del Servicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Hidden("Permiso", "Monitoreo")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()    
    <div class="main">
    @{Html.RenderPartial("NavBar_CatOperaciones", "Detalles del Servicio"); }
    <div class="row">
        <div class="col-lg-12">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Label("DETALLES DEL SERVICIO NÚMERO: " + Model.ID_Despacho)
                        <br/>
                        <b>Conductor:</b> @Model.Vehiculos_Conductores.Conductores.NombreCompleto<br />                        

                        @if (Model.Reservas.Clientes != null)
                    {
                            <b>Cliente:</b> @Model.Reservas.Clientes.Nombre<br />
                    }
                    else if (Model.Reservas.ClientesAbonados != null)
                    {
                            <b>Cliente:</b> @Model.Reservas.ClientesAbonados.Nombre<br />
                    }
                    else if (Model.Reservas.ClientesHabituales != null)
                    {
                            <b>Cliente:</b> @Model.Reservas.ClientesHabituales.Nombre<br />
                    }
                        <b>Fecha:</b> @Model.Fecha<br />
                        <b>Estatus:</b> @Model.Reservas.Estatus_Reserva.Nombre<br/>
                        <b>Monto:</b> @Model.Monto<br />
                        <b>Dirección Origen:</b> @Model.Reservas.DireccionOrigen<br />
                        <b>Dirección Destino</b> @Model.Reservas.DireccionDestino<br />
                        <b>Encuesta:</b> @Model.Encuesta<br />
                        <b>Observaciones</b> @Model.Observaciones<br />
                        <br/>
                        <div>
                            @Html.ActionLink("Regresar", "Index", null, new { @class = "_Visualizacion" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
