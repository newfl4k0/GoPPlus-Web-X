@model GoPS.ViewModels.TurnosViewModel
@using GoPS.Helpers;
@{
    ViewBag.Title = "Turnos";
}
@Html.Hidden("Permiso", "Configuraciones")
<div class="main">
    @{Html.RenderPartial("NavBar_CatVehiculos", "Catálogo de Turnos"); }
    <div class="row">
        <div class="col-lg-12">
            <br />
            <p>
                @Html.ActionLink("Nuevo", "Create", null, htmlAttributes: new { @class = "btn btn-default _Edicion" })
            </p>
            @if (ViewBag.Delete != null)
            {
                <p class="text-success">Registro Eliminado Exitosamente</p>
            }
            <div class="panel panel-default">
                <div class="panel-body">
                    <table data-toggle="table" data-pagination="true" data-show-refresh="false" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-sort-name="Nombre" data-sort-order="asc">
                        <thead>
                            <tr>
                                <th data-field="Nombre" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Turno")
                                </th>
                                <th data-field="Habilitado" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Habilitado")
                                </th>
                                <th data-field="Hora_Inicio" data-sortable="true" data-sorter="dateSorter">
                                    @Html.Label("Hora de Inicio")
                                </th>
                                <th data-field="Hora_Fin data-sortable="true" data-sorter="dateSorter"
                                    @Html.Label("Hora de Finalización")
                                </th>
                                <th data-field="Dias" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Días")
                                </th>
                                <th>@Html.Label("Acciones")</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model.turnos)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Habilitado)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hora_I_Format)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hora_F_Format)
                                </td>
                                <td>
                                    @{item.diasList = Model.ObtenerDiasList(item.Dias);}
                                    @Html.DisplayFor(modelItem => item.diasList)
                                </td>
                                <td class="div_actions">
                                    @Html.EncodedActionLink("Editar", "Edit", "Turnos", new { id = item.ID_Turno }, new { @class = "_Edicion" })<span class="_Edicion pipe"> | </span>
                                    @Html.EncodedActionLink("Detalles", "Details", "Turnos", new { id = item.ID_Turno }, new { @class = "_Visualizacion" })<span class="_Visualizacion pipe"> | </span>
                                    @Html.EncodedActionLink("Eliminar", "Delete", "Turnos", new { id = item.ID_Turno }, new { @class = "_Edicion" })
                                </td>
                            </tr>
                                        }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
