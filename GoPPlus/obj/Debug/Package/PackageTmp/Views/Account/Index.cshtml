@model IEnumerable<GoPS.Models.AspNetUsers>
@using GoPS.Helpers;
@{
    ViewBag.Title = "Usuarios";
}
@Html.Hidden("Permiso", "General")
<div class="main">
    @{Html.RenderPartial("NavBar_CatGenerales", "Catálogo de Usuarios"); }
    <div class="row">
        <div class="col-lg-12">
            <br />
            <p>
                @Html.ActionLink("Nuevo", "Register", null, htmlAttributes: new { @class = "btn btn-default" })
            </p>
            @if (ViewBag.Delete != null)
            {
                <p class="text-success">Registro Eliminado Exitosamente</p>
            }
            <div class="panel panel-default">
                <div class="panel-body">
                    <table data-toggle="table" data-pagination="true" data-show-refresh="false" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-sort-name="Email" data-sort-order="asc">
                        <thead>
                            <tr>
                                <th data-field="Email" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Email")
                                </th>
                                <th data-field="UserName" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Usuario")
                                </th>
                                <th data-field="Position" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Puesto")
                                </th>
                                <th data-field="RoleID" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Perfil")
                                </th>
                                <th data-field="PicturePath">
                                    @Html.Label("Foto")
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                       
    @foreach (var item in Model)
    {
        bool hasRole = item.AspNetUserRoles.FirstOrDefault() != null;
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Positions.Position)
            </td>   
            <td>
                @if (hasRole)
                    {
                        @Html.DisplayFor(modelItem => item.AspNetUserRoles.FirstOrDefault().AspNetRoles.Name)
                    }
            </td>
            <td>
                @if (item.PicturePath != null || item.PicturePath.Trim()!="")
                {
                    <img class="dbs-images" src="~/images/Uploads/@item.PicturePath" />
                    
                }
            </td>
            <td class="div_actions">
                @{  
                                bool isAdmin = Boolean.Parse(this.ViewContext.RouteData.Values["SAdministrador"].ToString());
                                if (hasRole)
                                {
                                    string rol = item.AspNetUserRoles.FirstOrDefault().AspNetRoles.Name;
                                    bool edit = isAdmin || (rol.ToUpper() != "SADMINISTRADOR" && rol.ToUpper() != "ADMINISTRADOR");
                                    bool delete = edit && (User.Identity.Name.ToLower() != item.UserName.ToLower());
                                    if (edit)
                                    {
                                        @Html.EncodedActionLink("Editar", "Edit", "Account", new { id = item.newId }, new { @class = "_Edicion" })<span class="_Edicion pipe"> | </span>                            
                                    }
                                    @Html.EncodedActionLink("Detalles", "Details", "Account", new { id = item.newId }, new { @class = "_Visualizacion" })<span class="_Visualizacion pipe"> | </span>
                                    if (delete)
                                    {
                                        @Html.EncodedActionLink("Eliminar", "Delete", "Account", new { id = item.newId }, new { @class = "_Edicion" });
                                    }
                                }
                }
            </td>
        </tr>
      }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<style>    label {width:70px}
</style>