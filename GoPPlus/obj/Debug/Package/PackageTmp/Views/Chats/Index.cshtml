@model IEnumerable<GoPS.Models.Chat>
@using GoPS.Helpers;

@{
    ViewBag.Title = "Chats";
}

@Html.Hidden("Permiso", "Monitoreo")
<div class="main">
    @{Html.RenderPartial("Breadcrumb", "Catálogo de Chats"); }
    <div class="row">
        <div class="col-lg-12">
            <br />
            <p>
                @*@Html.ActionLink("Nuevo", "Create", null, htmlAttributes: new { @class = "btn btn-default _Edicion" })*@
            </p>
            @if (ViewBag.Delete != null)
            {
                <p class="text-success">Registro Eliminado Exitosamente</p>
            }
            <div class="panel panel-default">
                <div class="panel-body">
                    <table data-toggle="table" data-pagination="true" data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-sort-name="Fecha" data-sort-order="asc">
                        <thead>
                            <tr>
                                <th data-field="Fecha" data-sortable="true" data-sorter="dateSorter">
                                    @Html.Label("Fecha")
                                </th>
                                <th data-field="Mensaje" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Mensaje")
                                </th>                                
                                <th data-field="Conductores.Nombre" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Conductor")
                                </th>
                                <th data-field="Despachos.Observaciones" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Observaciones")
                                </th>
                                <th>@Html.Label("Acciones")</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Mensaje)
                                </td>                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Conductores.NombreCompleto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Despachos.Observaciones)
                                </td>
                                <td class="div_actions">                                    
                                    @Html.EncodedActionLink("Detalles", "Details", "Chats", new { id = item.ID_Chat }, new { @class = "_Visualizacion" })<span class="_Visualizacion pipe"></span>                                    
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>