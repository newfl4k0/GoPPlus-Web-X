@model GoPS.Models.Clientes
@using GoPS.Helpers;

@{
    ViewBag.Title = "Ver Detalles de Clientes";
}

@Html.Hidden("Permiso", "Clientes")
<div class="main">
    @{Html.RenderPartial("Breadcrumb", "Clientes > Detalles"); }
    <div class="row">
        <div class="col-lg-12">
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.Label("Cliente")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>

                    <dt>
                        @Html.Label("Teléfono")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>

                    <dt>
                        @Html.Label("Fecha de Creación")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Fecha_Creacion)
                    </dd>

                </dl>
            </div>
            <p class="div_actions">                
                @Html.ActionLink("Regresar", "Index", null, new { @class = "_Visualizacion" })
            </p>
        </div>
    </div>
</div>