@model GoPS.Models.Positions
@using GoPS.Helpers;
@{
    ViewBag.Title = "Ver Detalles de Posición";
}

@Html.Hidden("Permiso", "General")
<div class="main">
    @{Html.RenderPartial("NavBar_CatPosiciones", "Detalles"); }
    <div class="row">
        <div class="col-lg-12">
            <div>
                <div>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Position)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Position)
                        </dd>

                    </dl>
                </div>
                <p class="div_actions">
                    @Html.EncodedActionLink("Editar", "Edit", "Positions", new { id = Model.Id }, new { @class = "_Edicion" })<span class="_Edicion pipe"> | </span>
                    @Html.ActionLink("Regresar", "Index", null, new { @class = "_Visualizacion" })
                </p>
            </div>
        </div>
    </div>
</div>
