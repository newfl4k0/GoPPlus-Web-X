@model GoPS.Models.TiposSanciones

@{
    ViewBag.Title = "Editar Tipo de Sanción";
}

@Html.Hidden("Permiso", "Configuraciones")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <script>
        $(document).ready(function () {
            $('.validar_cambio').change(function () {

                cambio = (($('#Nombre').val() != $('#hdnNombre').val()) || ($('#HorasPenalizacion').val() != $('#hdnHorasPenalizacion').val()));

            });
        });
    </script>
    <div class="main">
        @{Html.RenderPartial("NavBar_CatTiposSanciones", "Editar"); }
        <div class="row">
            <div class="col-lg-12">
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "No se pudo editar el registro. Por favor, corrija los campos en rojo e intente de nuevo.", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID_TipoSancion)
                    @Html.HiddenFor(model => model.Fecha_Creacion)
                    @Html.HiddenFor(model => model.Nombre, htmlAttributes: new { @id = "hdnNombre" })
                    @Html.HiddenFor(model => model.Horas_Penalizacion, htmlAttributes: new { @id = "hdnHorasPenalizacion" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2 field-required" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control validar_cambio" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Horas_Penalizacion, htmlAttributes: new { @class = "control-label col-md-2 field-required" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Horas_Penalizacion, new { htmlAttributes = new { @class = "form-control validar_cambio", @id = "HorasPenalizacion" } })
                            @Html.ValidationMessageFor(model => model.Horas_Penalizacion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Guardar" class="btn btn-default guardar" />
                        </div>
                    </div>
                </div>
                <div>
                    <a href="~/TiposSanciones/Index" class="_Visualizacion confirmLink"><em class="fa fa-arrow-left"></em> Regresar</a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
