@model IEnumerable<GoPS.Models.Empresas>

@{
    ViewBag.Title = "Empresas";
}
@Html.Hidden("Permiso", "Clientes")
<div class="main">
    @{Html.RenderPartial("Breadcrumb", "Catálogo de Empresas"); }
    <div class="row">
        <div class="col-lg-12">
            <br />
            <p>
                @Html.ActionLink("Nuevo", "Create", null, htmlAttributes: new { @class = "btn btn-default" })
            </p>
            @if (ViewBag.Delete != null)
            {
                <p class="text-success">Registro Eliminado Exitosamente</p>
            }
            <div class="panel panel-default">
                <div class="panel-body">
                    <table data-toggle="table" data-pagination="true" data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-sort-name="Nombre" data-sort-order="asc">
                        <thead>
                            <tr>
                                <th data-field="Nombre" data-sortable="true" data-sorter="customSorter">
                                    @Html.Label("Empresa")
                                </th>
                                <th>@Html.Label("Acciones")</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td class="div_actions">
                                    @Html.ActionLink("Editar", "Edit", new { id = item.ID_Empresa }, new { @class = "_Edicion" })<span class="_Edicion pipe"> | </span>
                                    @Html.ActionLink("Detalles", "Details", new { id = item.ID_Empresa }, new { @class = "_Visualizacion" })<span class="_Visualizacion pipe"> | </span>
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_Empresa }, new { @class = "_Edicion" })
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>