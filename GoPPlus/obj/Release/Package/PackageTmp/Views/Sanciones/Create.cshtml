@model GoPS.Models.Sanciones

@{
    ViewBag.Title = "Crear Sanción";
}

<style type='text/css'>
    .error {
        border: 2px solid red;
    }
</style>

@Html.Hidden("Permiso", "Configuraciones")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <script>
    $(document).ready(function () {
        $('.validar_cambio').change(function () {

            cambio = (($('#ID_Flota').val() != $('#hdnID_Flota').val())
                || ($('#ID_TipoSancion').val() != $('#hdnID_TipoSancion').val())
                || ($('#Fecha_Inicio').val() != $('#hdnFecha_Inicio').val())
                || ($('#Fecha_Fin').val() != $('#hdnFecha_Fin').val())
                || ($('#Observaciones').val() != $('#hdnObservaciones').val()));

        });
    });
    </script>
    <div class="main">
        @*@{Html.RenderPartial("Breadcrumb", "Sanciones > Crear"); }*@
        @{Html.RenderPartial("NavBar_CatSanciones", "Nuevo"); }
        <div class="row">
            <div class="col-lg-12">
                <div class="form-horizontal">
                    <hr />
                    @Html.Hidden("hdnID_Flota")
                    @Html.Hidden("hdnID_TipoSancion")
                    @Html.Hidden("hdnFecha_Inicio")
                    @Html.Hidden("hdnFecha_Fin")
                    @Html.Hidden("hdnObservaciones")
                    @if (ViewBag.Success != null)
                    {
                        <p class="text-success">Registrado Exitosamente.</p>
                    }
                    @Html.ValidationSummary(true, "No se pudo crear el registro. Por favor, corrija los campos en rojo e intente de nuevo.", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Conductores.ID_Flota, htmlAttributes: new { @class = "control-label col-md-2 field-required" })
                        <div class="col-md-4">
                            @Html.DropDownList("ID_Flota", null, "-Seleccione-", htmlAttributes: new { @class = "form-control validar_cambio" })
                            @Html.ValidationMessageFor(model => model.Conductores.ID_Flota, "", new { @class = "text-danger" })
                        </div>
                        @Html.LabelFor(model => model.ID_Conductor, htmlAttributes: new { @class = "control-label col-md-2 field-required" })
                        <div class="col-md-4">
                            @Html.DropDownList("ID_Conductor", null, "-Seleccione-", htmlAttributes: new { @class = "form-control validar_cambio" })
                            @Html.ValidationMessageFor(model => model.ID_Conductor, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ID_TipoSancion, htmlAttributes: new { @class = "control-label col-md-2 field-required" })
                        <div class="col-md-10">
                            @Html.DropDownList("ID_TipoSancion", null, "-Seleccione-", htmlAttributes: new { @class = "form-control validar_cambio" })
                            @Html.ValidationMessageFor(model => model.ID_TipoSancion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Fecha_Inicio, htmlAttributes: new { @class = "control-label col-md-2 field-required" })
                        <div class="col-md-3">
                            @Html.EditorFor(model => model.Fecha_Inicio, new { htmlAttributes = new { @class = "form-control datepicker validar_cambio", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.Fecha_Inicio, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-2">
                            @Html.TextBox("Hora_Inicio", "", htmlAttributes: new { @class = "form-control text-box single-line", @placeholder = "h:mm" })
                        </div>
                        @Html.LabelFor(model => model.Fecha_Fin, htmlAttributes: new { @class = "control-label col-md-2 field-required" })
                        <div class="col-md-3">
                            @Html.EditorFor(model => model.Fecha_Fin, new { htmlAttributes = new { @class = "form-control validar_cambio", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.Fecha_Fin, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Observaciones, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Observaciones, new { htmlAttributes = new { @class = "form-control validar_cambio" } })
                            @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Guardar" class="btn btn-default guardar" />
                        </div>
                    </div>
                </div>
                <div>
                    @*@Html.ActionLink("Regresar", "Index", null, new { @class = "_Visualizacion confirmLink" })*@
                    <a href="~/Sanciones/Index" class="_Visualizacion confirmLink"><em class="fa fa-arrow-left"></em> Regresar</a>
                </div>

            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/js/ActualizarConductorFlotaSelectLists.js"></script>
    <script src="~/js/ActualizarFechasSancion.js"></script>
}
