@model GoPS.Models.Conductores

@{
    ViewBag.Title = "Asignar Usuario a Conductor";
}

@Html.Hidden("Permiso", "Vehiculos")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="main">
        @{Html.RenderPartial("Breadcrumb", "Conductores > Asignar Usuario a Conductor"); }
        <div class="row">
            <div class="col-lg-12">
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "No se pudo asignar el usuario. Por favor, corrija los campos en rojo e intente de nuevo.", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID_Conductor)

                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.ID_Flota)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Flotas.Nombre)
                        </dd>

                        <dt>
                            @Html.Label("Conductor")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.Apellido)
                        </dd>
                    </dl>

                    <div class="form-group">
                        @Html.LabelFor(model => model.UserID_Conductor, htmlAttributes: new { @class = "control-label col-md-2 field-required" })
                        <div class="col-md-4">
                            @Html.DropDownList("UserID_Conductor", null, "-Ninguno-", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UserID_Conductor, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Asignar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                <div>
                    @Html.ActionLink("Regresar", "Index", null, new { @class = "_Visualizacion" })
                </div>

            </div>
        </div>
    </div>
            }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}