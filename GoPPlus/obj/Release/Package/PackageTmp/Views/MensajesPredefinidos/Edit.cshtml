@model GoPS.Models.MensajesPredefinidos

@{
    ViewBag.Title = "Editar Mensaje Predefinido";
}

@Html.Hidden("Permiso", "Configuraciones")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="main">
        @{Html.RenderPartial("Breadcrumb", "Mensajes Predefinidos > Editar"); }
        <div class="row">
            <div class="col-lg-12">
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "No se pudo editar el registro. Por favor, corrija los campos en rojo e intente de nuevo.", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID_MensajePredefinido)
                    @Html.HiddenFor(model => model.Fecha_Creacion)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Texto, htmlAttributes: new { @class = "control-label col-md-2 field-required" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Texto, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Texto, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Guardar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                <div>
                    @Html.ActionLink("Regresar", "Index", null, new { @class = "_Visualizacion" })
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
