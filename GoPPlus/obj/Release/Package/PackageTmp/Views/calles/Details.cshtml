@model GoPS.Models.Calles
@using GoPS.Helpers;
@{
    ViewBag.Title = "Ver Detalles de Calle";
}

@Html.Hidden("Permiso", "Mapas")
<div class="main">
    @{Html.RenderPartial("Breadcrumb", "Calles > Detalles"); }
    <div class="row">
        <div class="col-lg-12">
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Latitud)
                    </dt>

                    <dd>
                        <label class="tdlabel">@Model.Latitud</label>
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Longitud)
                    </dt>

                    <dd>
                        <label class="tdlabel">@Model.Longitud</label>
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ID_Colonia)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Colonias.Nombre)
                    </dd>

                </dl>
            </div>
            <p class="div_actions">
                @Html.EncodedActionLink("Editar", "Edit", "Calles", new { id = Model.ID_Calle }, new { @class = "_Edicion" })<span class="_Edicion pipe"> | </span>
                @Html.ActionLink("Regresar", "Index", null, new { @class = "_Visualizacion" })
            </p>
        </div>
    </div>
</div>