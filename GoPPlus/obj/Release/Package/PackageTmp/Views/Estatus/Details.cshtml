@model GoPS.Models.Estatus
@using GoPS.Helpers;
@{
    ViewBag.Title = "Ver Detalles de Status de Servicio";
}

@Html.Hidden("Permiso", "Configuraciones")
<div class="main">
    @{Html.RenderPartial("Breadcrumb", "Status > Detalles"); }
    <div class="row">
        <div class="col-lg-12">
            <div>
                <hr />
                <dl class="dl-horizontal">
                    @if (ViewBag.MostrarEmpresas)
                    {
                        <dt>
                            @Html.DisplayNameFor(model => model.ID_Empresa)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Empresas.Nombre)
                        </dd>
                    }
                    <dt>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Imagen)
                    </dt>

                    <dd>                       
                        @if (!String.IsNullOrEmpty(Model.Imagen))
                        {
                            <img class="dbs-images" src="@Url.Content("~/images/Uploads/" + Model.Imagen)" alt=" " />
                        }
                    </dd>
                </dl>
            </div>
            <p class="div_actions">
                @Html.EncodedActionLink("Editar", "Edit", "Estatus", new { id = Model.ID_Estatus }, new { @class = "_Edicion" })<span class="_Edicion pipe"> | </span>
                @Html.ActionLink("Regresar", "Index", null, new { @class = "_Visualizacion" })
            </p>
        </div>
    </div>
</div>